<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Recharge_cashMapper">
	
	<!--表名 -->
	<sql id="tableName">
		"RECHARGE_CASH"
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		"GMT_CREATE",	
		"GMT_MODIFIED",	
		"NUMBER",	
		"USER_ID",	
		"PAYMENT_TYPE",	
		"VOUCHER",	
		"IS_DELETED",	
		"IS_AUDITING",
		"PHONE",
		"RECHARGE_CASH_ID"
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
			#{GMT_CREATE},	
			#{GMT_MODIFIED},	
			#{NUMBER},	
			#{USER_ID},	
			#{PAYMENT_TYPE},	
			#{VOUCHER},	
			#{IS_DELETED},	
			#{IS_AUDITING},
			#{PHONE},
			#{RECHARGE_CASH_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		"RECHARGE_CASH_ID" = #{RECHARGE_CASH_ID}
	</delete>

	<!-- 清空表-->
	<delete id="wipeData" parameterType="pd">
		delete from
		<include refid="tableName"></include>
	</delete>


	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
			set 
				"IS_AUDITING" = #{IS_AUDITING},	
			"RECHARGE_CASH_ID" = "RECHARGE_CASH_ID"
			where 
				"RECHARGE_CASH_ID" = #{RECHARGE_CASH_ID}
	</update>

	<!-- 更改订单状态 -->
	<update id="editState" parameterType="pd">
		update
		<include refid="tableName"/>
		set
		"IS_AUDITING" = #{IS_AUDITING},
		"GMT_MODIFIED" = #{GMT_MODIFIED}
		where
		"RECHARGE_CASH_ID" = #{RECHARGE_CASH_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			"RECHARGE_CASH_ID" = #{RECHARGE_CASH_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(

					"PAYMENT_TYPE" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					"NUMBER" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					or
					"IS_AUDITING" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					or
					"PHONE" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		<if test="pd.lastStart!= null and pd.lastStart != '' "><!-- 时间段检索  开始时间-->
			and
			"GMT_CREATE" &gt;= #{pd.lastStart}
		</if>
		<if test="pd.lastEnd!= null and pd.lastEnd != '' "><!-- 时间段检索 结束时间 -->
			AND
			"GMT_CREATE" &lt;=  ( SELECT TO_CHAR(( SELECT to_date( #{pd.lastEnd}, 'yyyy-mm-dd' ) + 1 FROM dual ), 'yyyy-mm-dd' ) FROM dual )
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>

	<!-- 列表(根据用户ID列出) -->
	<select id="listByUserId" parameterType="pd" resultType="pd">
		select
		<include refid="Field"/>
		from
		<include refid="tableName"/>
		where
		"USER_ID" = #{USER_ID}
		order by "GMT_CREATE"
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			"RECHARGE_CASH_ID" in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>